server {
  listen 80;
  server_name _;
  root /usr/share/nginx/html;
  index index.html;

  # Long cache for assets under /assets (immutable bundles)
  location ~* ^/assets/.+\.(css|js|mjs|png|jpe?g|gif|svg|webp|ico|woff2?)$ {
    expires 1y;
    add_header Cache-Control "public, immutable" always;
    try_files $uri =404;
  }

  # Moderate cache for other static files
  location ~* \.(css|js|mjs|png|jpe?g|gif|svg|webp|ico|woff2?)$ {
    expires 7d;
    add_header Cache-Control "public, max-age=604800" always;
    try_files $uri =404;
  }

  # Never cache the HTML shell
  location = /index.html {
    expires -1;
    add_header Cache-Control "no-cache, no-store, must-revalidate" always;
  }

  # Service worker: avoid aggressive cache
  location = /sw.js {
    expires -1;
    add_header Cache-Control "no-cache" always;
  }

  # SPA fallback
  location / {
    try_files $uri $uri/ /index.html;
  }
}
